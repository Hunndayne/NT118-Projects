<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".HomeActivity">

    <include
        android:id="@id/headerStudent"
        layout="@layout/header_student"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingHorizontal="12dp"
        android:elevation="4dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@id/footerStudent"
        layout="@layout/footer_student"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="22dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/footerStudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerStudent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_text"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extra_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvHomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="HOME"
                android:fontFamily="@font/nunito_extra_bold"
                android:textColor="@android:color/black"
                android:textSize="32dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMyCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:id="@+id/layoutMyCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Hàng tiêu đề và mũi tên -->
                    <LinearLayout
                        android:id="@+id/headerMyCourses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMyCourses"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="My Courses"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/imgArrowMyCourses"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <!-- Danh sách khóa học (ẩn ban đầu) -->
                    <LinearLayout
                        android:id="@+id/layoutCourseList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:gravity="center"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardCourse1"
                            style="@style/CourseCard"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="#A7DAE7">

                            <TextView
                                style="@style/CourseCardText"
                                android:text="TOEIC READING LISTENING TA153GD"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardCourse2"
                            style="@style/CourseCard"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="#A7DAE7">

                            <TextView
                                style="@style/CourseCardText"
                                android:text="TOEIC SPEAKING WRITING TB115"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:id="@+id/layoutNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tiêu đề + Mũi tên -->
                    <LinearLayout
                        android:id="@+id/headerNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvNotifications"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notifications"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/imgArrowNotification"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <!-- Nội dung thông báo (ẩn ban đầu) -->
                    <LinearLayout
                        android:id="@+id/layoutNotificationList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvFolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event"
                            android:textColor="@color/dimgrey"
                            android:textSize="13dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20/11 - GỬI LỜI CHÚC, VẠN ĐIỀU HAY"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFolder"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- File 1 -->
                        <TextView
                            android:id="@+id/tvFile1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remind"
                            android:textColor="@color/dimgrey"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/divider1"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvFileTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[TA153GD] LỊCH THI GIỮA KHÓA"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFile1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvFileTitle1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- File 2 -->
                        <TextView
                            android:id="@+id/tvFile2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warning"
                            android:textColor="@color/dimgrey"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/divider2"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvFileTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Học viên nghỉ quá 3 buổi"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFile2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>