<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".CourseActivity">

    <include
        android:id="@+id/headerStudent"
        layout="@layout/header_student"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/footerStudent"
        layout="@layout/footer_student"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/headerStudent"
        app:layout_constraintBottom_toTopOf="@id/footerStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_text"
                android:textSize="13dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extra_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvCourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="MY COURSE"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="32dp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_extra_bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#F5F5F5">

                <TextView
                    android:id="@+id/tvTimeline"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="Next 6 months"
                    android:textSize="13dp"
                    android:textColor="@android:color/black"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawablePadding="8dp" />
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiSearch"
                style="@style/Widget.App.TextInputLayout.Search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Search courses"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#F5F5F5"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@drawable/ic_search_24"
                app:startIconTint="@color/grey"
                app:hintTextColor="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:textColor="@android:color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvRecently"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recently accessed courses"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_extra_bold" />

            <LinearLayout
                android:id="@+id/recentRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCourse1"
                    android:layout_width="0dp"
                    android:layout_height="112dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#a7dae7"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/card1Content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvCourse1Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TOEIC READING LISTENING"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvCourse1Code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TA15  3GD"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvCourse1Tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Toeic"
                            android:textSize="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCourse2"
                    android:layout_width="0dp"
                    android:layout_height="112dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#a7dae7"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/card2Content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvCourse2Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TOEIC SPEAKING WRITING"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvCourse2Code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TB115"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvCourse2Tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Toeic"
                            android:textSize="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/calendarHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Calendar"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_extra_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardCalendarMode"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCalendarMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#F5F5F5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tvCalendarMode"
                        android:layout_width="145dp"
                        android:layout_height="40dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical"
                        android:text="Shortened mode"
                        android:textSize="12dp"
                        android:textColor="@android:color/black"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:drawablePadding="8dp" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@id/calendar"
                layout="@layout/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>