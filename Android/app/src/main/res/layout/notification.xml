<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".UserAccount_xoadcr">

    <!-- Header -->
    <include
        android:id="@id/headerStudent"
        layout="@layout/header_student"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingHorizontal="12dp"
        android:elevation="4dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer -->
    <include
        android:id="@id/footerStudent"
        layout="@layout/footer_student"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="22dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nội dung chính -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/footerStudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerStudent">

        <!-- Nút Back -->
        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/back_text"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etSearchNotification"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_search"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:hint="Search notifications..."
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <!-- CardView: Notification -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/searchLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                                    <TextView
                        android:id="@+id/tvNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Notifications"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />


                <!-- Danh sách người dùng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Folder -->
                        <TextView
                            android:id="@+id/tvFolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event"
                            android:textColor="@color/dimgrey"
                            android:textSize="13dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20/11 - GỬI LỜI CHÚC, VẠN ĐIỀU HAY"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFolder"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/grey"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- File 1 -->
                        <TextView
                            android:id="@+id/tvFile1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remind"
                            android:textColor="@color/dimgrey"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/divider1"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvFileTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[TA153GD] LỊCH THI GIỮA KHÓA"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFile1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/grey"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvFileTitle1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- File 2 -->
                        <TextView
                            android:id="@+id/tvFile2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warning"
                            android:textColor="@color/dimgrey"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/divider2"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvFileTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Học viên nghỉ quá 3 buổi"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFile2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/grey"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvFileTitle2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

              </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
