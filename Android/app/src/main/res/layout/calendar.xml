<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_secondary"
    tools:context=".LoginActivity">

    <ImageButton
        android:id="@+id/previousMonthButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back_arrow"
        android:background="@android:color/transparent"
        app:tint="@color/icon_tint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/monthYearText"
        app:layout_constraintBottom_toBottomOf="@id/monthYearText"
        android:contentDescription="Previous Month" />

    <TextView
        android:id="@+id/monthYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_extra_bold"
        android:text="September 2025"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="September 2025" />

    <ImageButton
        android:id="@+id/nextMonthButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/next_arrow"
        android:background="@android:color/transparent"
        app:tint="@color/icon_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/monthYearText"
        app:layout_constraintBottom_toBottomOf="@id/monthYearText"
        android:contentDescription="Next Month" />

    <LinearLayout
        android:id="@+id/legendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/monthYearText"
        android:weightSum="7">

        <TextView android:text="Mon" style="@style/CalendarDayLegend" />
        <TextView android:text="Tue" style="@style/CalendarDayLegend" android:textColor="@color/blueslogan" />
        <TextView android:text="Wed" style="@style/CalendarDayLegend" />
        <TextView android:text="Thu" style="@style/CalendarDayLegend" android:textColor="@color/blueslogan" />
        <TextView android:text="Fri" style="@style/CalendarDayLegend" />
        <TextView android:text="Sat" style="@style/CalendarDayLegend" android:textColor="@color/blueslogan" />
        <TextView android:text="Sun" style="@style/CalendarDayLegend" />
    </LinearLayout>

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legendLayout"
        app:cv_dayViewResource="@layout/calendar_date"
        app:cv_orientation="horizontal"
        app:cv_scrollPaged="true" />

</androidx.constraintlayout.widget.ConstraintLayout>