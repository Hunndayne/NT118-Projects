<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="54dp"
    android:paddingHorizontal="12dp"
    android:elevation="4dp"
    android:layout_marginTop="34dp"
    android:background="@drawable/bg_header"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical">

    <!-- Logo EngGo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo EngGo"
        android:layout_marginEnd="0dp" />

    <!-- Thanh ngăn cách -->
    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@color/black" />

    <!-- Light/Dark mode icon -->
    <ImageButton
        android:id="@+id/btnThemeSwitch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_theme"
        android:contentDescription="Toggle Theme"
        app:tint="@color/dimgrey" />
    <!-- Spacer đẩy icon sang phải -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Tên sinh viên + Avatar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyen, Huynh Ngoc Ngan"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginEnd="4dp"/>

        <ImageView
            android:id="@+id/iconAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_account_student"
            android:padding="0dp"
            app:tint="@color/dimgrey"
            android:contentDescription="Avatar" />

        <ImageView
            android:id="@+id/imgDropdown"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_arrow_drop_down"
            android:contentDescription="Dropdown arrow"
            app:tint="@color/dimgrey" />

    </LinearLayout>
</LinearLayout>
