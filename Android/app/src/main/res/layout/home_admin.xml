<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".admin.HomeAdminActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <include
        android:id="@id/headerAdmin"
        layout="@layout/header_admin"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingHorizontal="12dp"
        android:elevation="4dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@id/footerAdmin"
        layout="@layout/footer_admin"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/background_secondary"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="22dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_secondary"
        app:layout_constraintBottom_toTopOf="@id/footerAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerAdmin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAdmin_Dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dashboard"
                android:fontFamily="@font/nunito_extra_bold"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAdmin_cardNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="0dp"
                android:outlineProvider="none"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/btnAdmin_News"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/headerAdmin_News"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAmin_News"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:text="News"
                            android:textColor="@color/text_primary"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/imgArrowAdmin_News"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:tint="@color/icon_tint" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAdmin_NewsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardNews1"
                            style="@style/CourseCard"
                            android:layout_width="0dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/background_secondary"
                            app:strokeColor="@color/card_stroke">

                            <TextView
                                style="@style/CourseCardText"
                                android:text="[TA143GD] MID TERM"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardNews2"
                            style="@style/CourseCard"
                            android:layout_width="0dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/background_secondary"
                            app:strokeColor="@color/card_stroke">

                            <TextView
                                style="@style/CourseCardText"
                                android:text="TOEIC SPEAKING WRITING TB115"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdmin_ManageCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="0dp"
                android:outlineProvider="none"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/layoutAdmin_ManageCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <LinearLayout
                        android:id="@+id/headerAdmin_ManageCourses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:id="@+id/tvAdmin_ManageCourses"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:text="Manage Courses"
                            android:textColor="@color/text_primary"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/imgArrowAdmin_ManageCourses"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:tint="@color/icon_tint" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAdmin_ManageCoursesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAdmin_Course1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@color/background_secondary"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/card_stroke"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:text="[TA153GD] TOEIC R&amp;L"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:text="Toiec • 45 Students"
                                        android:textSize="12sp"
                                        android:textColor="#808080"
                                        android:layout_marginTop="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_edit"
                                    app:tint="@color/icon_tint" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAdmin_Course2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@color/background_secondary"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/card_stroke"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:text="[TB115] TOEIC S&amp;W"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:text="Toiec • 30 Students"
                                        android:textSize="12sp"
                                        android:textColor="#808080"
                                        android:layout_marginTop="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_edit"
                                    app:tint="@color/icon_tint" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdmin_ManageAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="0dp"
                android:outlineProvider="none"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/layoutAdmin_ManageAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <LinearLayout
                        android:id="@+id/headerAdmin_ManageAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvAdmin_ManageAccount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:text="Manage Accounts"
                            android:textColor="@color/text_primary"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/imgArrowAdmin_ManageAccount"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:tint="@color/icon_tint" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAdmin_ManageAccountList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAdmin_Account1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@color/background_secondary"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/card_stroke"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardBackgroundColor="#E0F7FA"
                                    app:cardElevation="0dp">
                                    <TextView
                                        android:text="H"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#006064"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:text="Trần Thanh Hùng"
                                        android:textSize="15sp"
                                        android:textColor="@color/text_primary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:text="SV001 • hungtt@gmail.com"
                                        android:textSize="12sp"
                                        android:textColor="#808080"
                                        android:layout_marginTop="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:ellipsize="end"/>
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/btnEdit1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_edit"
                                    app:tint="@color/icon_tint" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAdmin_Account2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@color/background_secondary"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/card_stroke"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardBackgroundColor="#F3E5F5"
                                    app:cardElevation="0dp">
                                    <TextView
                                        android:text="Q"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#4A148C"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:text="Nguyễn Tài Quang"
                                        android:textSize="15sp"
                                        android:textColor="@color/text_primary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:text="SV002 • quangnt@gmail.com"
                                        android:textSize="12sp"
                                        android:textColor="#808080"
                                        android:layout_marginTop="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:ellipsize="end"/>
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/btnEdit2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_edit"
                                    app:tint="@color/icon_tint" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>