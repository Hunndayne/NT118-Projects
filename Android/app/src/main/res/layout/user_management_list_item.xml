<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="false"
    android:focusable="false"
    android:descendantFocusability="afterDescendants">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/background_secondary"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/tvUserName_manageusritem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="User Name"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonsContainer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvUserStatus_manageusritem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            tools:text="Active"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName_manageusritem" />

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btnEdit_manageusritem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_management_button_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Edit"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/text_primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/btnDelete_manageusritem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_management_button_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Delete"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/text_primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/btnLock_manageusritem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_management_button_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Lock"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>