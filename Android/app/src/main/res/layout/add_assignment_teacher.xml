<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".AddAssignmentAdminActivity">

    <include
        android:id="@+id/headerAdmin"
        layout="@layout/header_admin_teacher"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingHorizontal="12dp"
        android:elevation="4dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        android:id="@+id/footerTeacher"
        layout="@layout/footer_teacher"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/background_secondary"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="22dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_secondary"
        app:layout_constraintBottom_toTopOf="@id/footerTeacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerAdmin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAdmin_EditAssignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Create Assignment"
                android:fontFamily="@font/nunito_extra_bold"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:text="Title"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etAddAssignmentTitle_admin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edit_text_form"
                    android:paddingHorizontal="12dp"
                    android:text="Assignment 1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:text="Content"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etAddAssignmentContent_admin"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/bg_edit_text_form"
                    android:gravity="top|start"
                    android:padding="12dp"
                    android:hint="Write something here..."
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:text="Attachment File"
                    android:textSize="14sp" />
                <android.widget.Button
                    android:id="@+id/buttonAddAttachment_Assignment_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:text="Upload a file"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSelectedFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:text="Attachment Link"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/etAttachLinkContentAddAssignment_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text_form"
                    android:padding="12dp"
                    android:text="https://youtu.be/dQw4w9WgXcQ"
                    android:hint="https://youtu.be/dQw4w9WgXcQ"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:text="Start time"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etStartTimeAddAssignment_admin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edit_text_form"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Select start time"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:text="Due time"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etDueTimeAddAssignment_admin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edit_text_form"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Select due time"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"> <android.widget.Button
                android:id="@+id/buttonCancelAddAssignment_admin"
                android:layout_width="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_height="40dp"
                android:text="Cancel"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/enggo_grey_100"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" />

                <android.widget.Button
                    android:id="@+id/buttonCreateAssignment_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>