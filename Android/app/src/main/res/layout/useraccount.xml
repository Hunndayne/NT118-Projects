<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".UserAccount">

    <!-- Header: Phần đầu trang -->
    <LinearLayout
        android:id="@+id/headerAdmin"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_header"
        android:elevation="4dp"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".YourActivity">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search"
            android:drawableStart="@drawable/ic_search"
            android:hint="@string/hint_search"
            android:inputType="text"
            android:paddingStart="12dp"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnNotification"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Notifications"
            android:src="@drawable/ic_notification"
            tools:ignore="HardcodedText,ImageContrastCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Settings"
            android:src="@drawable/ic_setting"
            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

        <ImageView
            android:id="@+id/imgAvatarHeader"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <!-- Footer: Phần chân trang -->
    <LinearLayout
        android:id="@+id/footerAdmin"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="22dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/btnDashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/icDashboard"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_dashboard"
            android:contentDescription="@string/nav_dashboard"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_dashboard"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnCourses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/icCourses"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_courses"
            android:contentDescription="@string/nav_courses"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_courses"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLessons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/icLessons"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_lesson"
            android:contentDescription="@string/nav_lessons"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvLessons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_lessons"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnAssignments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/icAssignments"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_assignment"
            android:contentDescription="@string/nav_assignments"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvAssignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_assignments"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnReports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/icReports"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_report"
            android:contentDescription="@string/nav_reports"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_reports"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    </LinearLayout>

    <!-- Nội dung chính có thể cuộn -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/footerAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerAdmin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extra_bold"

                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/back_text"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_outline"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBack">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray"
                    android:contentDescription="Avatar"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUserRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_student_role"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Khung chứa ListView -->
            <LinearLayout
                android:id="@+id/userAccountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_outline"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userInfoLayout">

                <TextView
                    android:id="@+id/tvUserAccountHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/header_user_account"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/userAccountListView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" /> <!-- Đặt chiều cao cụ thể để ListView hiển thị trong ScrollView -->

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
