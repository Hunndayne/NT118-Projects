<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="@android:color/white"/>

    <!-- Viền xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" />

    <!-- Bo góc -->
    <corners android:radius="8dp"/>

    <!-- Padding trong ô -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
