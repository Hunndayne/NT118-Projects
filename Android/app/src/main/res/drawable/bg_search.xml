<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền trắng với bo góc nhẹ -->
    <item android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- Màu nền -->
            <solid android:color="@color/background_card" />
            <!-- Bo góc nhẹ -->
            <corners android:radius="10dp" />
            <!-- Viền mờ nhẹ để tạo khối -->
            <stroke android:color="@color/card_stroke" android:width="0.8dp" />
        </shape>
    </item>

</layer-list>
